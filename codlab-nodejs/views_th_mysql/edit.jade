doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
          a(href='/topic') Server Side JavaScript
        div
            

        ul
            - var count = 0;
          each topic in topics          
            if count < 15
                li  
                    a(href='/topic/'+topic.id)= topic.test1
                - count++;

        article 
            form(action='/topic/'+topic.id+'/edit' method='post')
                p
                    input(type='text' name='test1' value=topic.test1 placeholder='title_test1')
                p
                    textarea(name='test2' placeholder='description_test2')
                        =topic.test2
                p
                    input(type='text' name='test3' value=topic.test3 placeholder='test3')
                p
                    input(type='submit')

            ul  
                li
                    a(href='/topic/add') add
                       